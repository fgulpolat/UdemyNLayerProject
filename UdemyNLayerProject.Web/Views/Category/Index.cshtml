@model IEnumerable<CategoryDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Kategoriler</h1>
<a class="btn btn-primary" asp-action="create">Kategori Ekle</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>İşlemler</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>
            <td>
                <a class="btn btn-success" asp-action="upate" asp-route-id="@item.Id">Düzenle</a>
                <a class="btn btn-danger" asp-action="delete" asp-route-id="@item.Id">Sil</a>

            </td>
            
        </tr>
        }
    </tbody>
</table>
